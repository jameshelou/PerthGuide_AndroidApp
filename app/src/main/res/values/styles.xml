<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Category TextView style -->
    <style name="category_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>




    <!-- Tourism List_item TextView header style -->
    <style name="tourism_list_item_header">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:gravity">left</item>
        <item name="android:background">@color/background_tourism</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Tourism List_item TextView body style -->
    <style name="tourism_list_item_body">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">top</item>
        <item name="android:background">@color/background_tourism</item>
        <item name="android:textSize">16sp</item>
    </style>




    <!-- Useful info List_item TextView header style -->
    <style name="info_list_item_header">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Useful info List_item TextView body style -->
    <style name="info_list_item_body">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
