<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.helou.james.perthguide.MainActivity">

    <View
        android:id="@+id/middle_divider"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerVertical="true"/>

    <View
        android:id="@+id/center_divider"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"/>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:layout_alignParentStart="true"
    android:layout_toStartOf="@id/center_divider"
    android:layout_above="@id/middle_divider">
    <TextView
        style="@style/category_textview"
        android:text="@string/placeholder" />
</FrameLayout>

<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/category_info"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/center_divider"
        android:layout_above="@id/middle_divider">
    <TextView
        android:id="@+id/info_textview"
        style="@style/category_textview"
        android:text="@string/category_info" />
</FrameLayout>

<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/category_tourism"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/center_divider"
        android:layout_below="@id/middle_divider">
    <TextView
        android:id="@+id/tourism_textview"
        style="@style/category_textview"
        android:text="@string/category_tourism" />
</FrameLayout>

<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/center_divider"
        android:layout_below="@id/middle_divider">
    <TextView
        style="@style/category_textview"
        android:text="@string/placeholder"/>
</FrameLayout>

</RelativeLayout>
